@model IEnumerable<AnimalMed.DTO.MedicalRecords.MedicalRecordModel>
@{
    ViewData["Title"] = "Medical Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Medical Records</h2>
<p>
    <a asp-action="Create" asp-route-animalId="@Context.Request.Query["animalId"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalRecordUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnimalName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicalRecordUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    <a href="@item.MedicalRecordUrl" download>Download</a> |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
